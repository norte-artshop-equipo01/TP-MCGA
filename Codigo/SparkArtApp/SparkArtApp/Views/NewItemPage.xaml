<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SparkArtApp.Views.NewItemPage" Title="{Binding Title}">
    <StackLayout >
        <Frame BackgroundColor="#2196F3" CornerRadius="0">
            <Label Text="Nuevo Item" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
        </Frame>
        <StackLayout Padding="16">
            <Label Text="Texto" FontSize="Medium" />
            <Entry Text="{Binding Text, Mode=TwoWay}" FontSize="Medium" />

            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Description, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="0" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Cancelar" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Guardar" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>

    </StackLayout>
</ContentPage>