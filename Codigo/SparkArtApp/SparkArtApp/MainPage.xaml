<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SparkArtApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Image Source="http://norte-mcga-grupo01.somee.com/Content/assets/img/core-img/logo.png"/>
        </Frame>
        <Label Text="Realice cambios en su archivo XAML y guárdelo para ver la actualización de la interfaz de usuario en la aplicación en ejecución con XAML Hot Reload. ¡Darle una oportunidad!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Learn more at "/>
                        <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Button Text="Ver listado de Artistas" Clicked="ShowArtist_OnClicked" Margin="30"></Button>
        <Button Text="Ver listado de Productos" Clicked="ShowArtist_OnClicked" Margin="30"></Button>
    </StackLayout>

</ContentPage>
